<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="informationViewModel"
            type="net.mindzone.robroo.ui.main.information.InformationViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">
    <include
        android:id="@+id/toolbar2"
        layout="@layout/view_custom_toolbar02"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        ></include>
    <androidx.core.widget.NestedScrollView
        app:layout_constraintTop_toBottomOf="@+id/toolbar2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/scrollViewService"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:fillViewport="true"
        android:scrollbars="none"
        android:layout_height="@dimen/dp_0">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <androidx.viewpager.widget.ViewPager
                android:id="@+id/viewPagerService"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_250"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"></androidx.viewpager.widget.ViewPager>

            <com.afollestad.viewpagerdots.DotsIndicator
                android:id="@+id/indicatorService"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_15"
                app:dot_drawable="@drawable/custom_circle"
                app:layout_constraintBottom_toBottomOf="@id/viewPagerService"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layoutView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dp_13"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/viewPagerService"
                android:paddingRight="@dimen/dp_13"
                >

                <TextView
                    android:id="@+id/txtTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_7"
                    android:fontFamily="@font/kanit_medium"
                    android:text="@string/title_1"
                    android:textColor="@color/color_414141"
                    android:layout_marginTop="@dimen/dp_13"
                    android:textSize="@dimen/sp_14"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"></TextView>
                <TextView
                    android:layout_marginLeft="@dimen/dp_7"
                    android:text="@string/published"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/kanit_light"
                    android:textColor="@color/color_5A5A5A"
                    android:textSize="@dimen/sp_12"
                    app:layout_constraintTop_toBottomOf="@id/txtTitle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="@dimen/dp_12"
                    >
                </TextView>


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_8"
                    app:layout_constraintEnd_toStartOf="@id/txtTitleM"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="@dimen/dp_16"
                    android:src="@drawable/ic_view"
                    ></ImageView>

                <TextView
                    android:text="@string/_5"
                    android:id="@+id/txtTitleM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/kanit_light"
                    android:textColor="@color/color_5A5A5A"
                    android:textSize="@dimen/sp_14"
                    android:layout_marginRight="@dimen/dp_12"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="@dimen/dp_12"
                    >
                </TextView>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/color_F3F3F3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layoutView"
                ></View>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:padding="@dimen/dp_16"
                app:layout_constraintTop_toBottomOf="@id/layoutView"
                >
            </TextView>

            <at.blogc.android.views.ExpandableTextView
                android:fontFamily="@font/kanit_light"
                android:textColor="@color/color_5A5A5A"
                android:textSize="@dimen/sp_14"
                android:id="@+id/txtContentService"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/content_service"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:padding="@dimen/dp_16"
                app:layout_constraintTop_toBottomOf="@id/layoutView"
                android:maxLines="5"
                android:ellipsize="end"
                app:animation_duration="750"/>
            <Button
                android:id="@+id/btnExpand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/more"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:background="@color/colorBigText"
                android:layout_marginTop="@dimen/dp_16"
                android:foreground="?android:attr/selectableItemBackground"
                android:fontFamily="@font/kanit_medium"
                android:textStyle="bold"
                android:textSize="@dimen/sp_14"
                app:layout_constraintTop_toBottomOf="@id/txtContentService"
                android:paddingLeft="@dimen/dp_74"
                android:paddingRight="@dimen/dp_74"
                android:paddingBottom="@dimen/dp_10"
                android:paddingTop="@dimen/dp_10"
                >
            </Button>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>