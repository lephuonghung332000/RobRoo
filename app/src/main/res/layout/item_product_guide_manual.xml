<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="@dimen/dp_0">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:id="@+id/constraintLayout"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/childProductManualDown"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/dp_16"
            android:paddingTop="@dimen/dp_20"
            android:paddingRight="@dimen/dp_16">
            <ImageView
                android:id="@+id/imgColumn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_4"
                android:src="@drawable/ic_column"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:id="@+id/txtTitleManualPdfDown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_7"
                android:maxLines="1"
                android:maxLength="25"
                android:ellipsize="end"
                android:singleLine="true"
                android:fontFamily="@font/kanit_medium"
                android:text="@string/repair_manual"
                android:textColor="@color/color_414141"
                android:textSize="@dimen/sp_14"
                app:layout_constraintStart_toEndOf="@id/imgColumn"
                app:layout_constraintBottom_toTopOf="@+id/tvLanguageParent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:id="@+id/tvLanguageParent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_7"
                android:layout_marginBottom="@dimen/dp_12"
                android:fontFamily="@font/kanit_light"
                android:text="@string/thai_language"
                android:maxLines="1"
                android:maxLength="10"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/color_5A5A5A"
                android:textSize="@dimen/sp_12"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/imgColumn"
                app:layout_constraintTop_toBottomOf="@id/txtTitleManualPdfDown">

            </TextView>
            <FrameLayout
                android:visibility="visible"
                android:id="@+id/frameLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                >
                <TextView
                    android:id="@+id/btnDowload"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dowloaded"
                    android:visibility="gone"
                    android:fontFamily="@font/kanit_light"
                    android:textSize="@dimen/sp_12"
                    android:gravity="center"
                    android:textColor="@color/color_009E9E"
                    android:paddingStart="@dimen/dp_14"
                    android:paddingTop="@dimen/dp_3"
                    android:paddingEnd="@dimen/dp_13"
                    android:paddingBottom="@dimen/dp_5"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:background="@drawable/ripple_effect_sub_button_item" />
                <com.app.adprogressbarlib.AdCircleProgress
                    android:id="@+id/dowload_progress"
                    xmlns:custom="http://schemas.android.com/apk/res-auto"
                    android:layout_width="@dimen/dp_32"
                    android:layout_height="@dimen/dp_32"
                    android:visibility="gone"
                    custom:adpgb_progress="0"
                    custom:adpgb_background_color="@color/white"
                    app:adpgb_finished_color="@color/color_009E9E"
                    app:adpgb_unfinished_color="@color/color_009E9E"
                    custom:adpgb_finished_stroke_width="@dimen/dp_2"
                    android:layout_marginBottom="@dimen/dp_12"
                    custom:adpgb_inner_drawable="@drawable/ic_retangle"
                    custom:adpgb_show_text="false"
                    custom:adpgb_unfinished_stroke_width="1dp" />
                <ProgressBar
                    android:id="@+id/progressBarItem"
                    android:layout_width="@dimen/dp_45"
                    android:layout_height="@dimen/dp_45"
                    android:layout_gravity="center_horizontal"
                    android:visibility="visible"
                    android:padding="@dimen/dp_8"
                    android:indeterminate="true"
                    android:indeterminateTintMode="src_atop"
                    android:indeterminateTint="@color/colorPrimary"
                    android:layout_marginBottom="@dimen/dp_8"
                    />
            </FrameLayout>


                <TextView
                    android:id="@+id/txtL308"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_17"
                    android:fontFamily="@font/kanit_medium"
                    android:text="@string/l3008"
                    android:textColor="@color/color_414141"
                    app:layout_constraintEnd_toStartOf="@+id/frameLayout"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/txtTitleM"
                    android:textSize="@dimen/sp_14"/>
                <TextView
                    android:id="@+id/txtTitleM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/kanit_light"
                    android:text="@string/tractor"
                    android:textColor="@color/color_5A5A5A"
                    android:textSize="@dimen/sp_12"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:maxLength="25"
                    android:ellipsize="end"
                    android:layout_marginEnd="@dimen/dp_17"
                    android:layout_marginBottom="@dimen/dp_12"
                    app:layout_constraintEnd_toStartOf="@+id/frameLayout"
                    app:layout_constraintTop_toBottomOf="@+id/txtL308"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>