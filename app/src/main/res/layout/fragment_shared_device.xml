<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <data>
        <variable
            name="informationViewModel"
            type="net.mindzone.robroo.ui.detail.shareddevice.ShareDeviceViewModel" />
    </data>

    <LinearLayout
        android:id="@+id/layoutShareDevice"
    android:padding="16dp"
    android:layout_height="wrap_content"
        android:orientation="vertical"
    android:layout_width="match_parent">
        <include
            android:id="@+id/layoutNodataShare"
            layout="@layout/layout_no_data_viewpager"
            android:visibility="gone"
            />
    <TextView
        android:id="@+id/txtShareDevice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_E5E5E5"
        android:fontFamily="@font/kanit_medium"
        android:gravity="center"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10"
        android:text="@string/shared_device"
        android:textColor="@color/color_414141"
        android:textSize="@dimen/sp_14"
        android:textStyle="normal" />
        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="@dimen/dp_4"
            android:id="@+id/recyclerShareDevice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             />


</LinearLayout>
</layout>